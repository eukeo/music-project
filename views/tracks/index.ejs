<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script defer src="/public/javascripts/soundcloud.js"></script>
    <link rel="stylesheet" href='/stylesheets/style.css'/>
    <title>Wubble</title>
</head>
<body>
    <nav>
        <ul>
          <li><a href="/"><img src="https://worldwaterskiers.com/wp-content/themes/WorldWaterSkiers/downloads/logos/W-Icon-White-Circle.png" class="corner"></a></li>
          <li><a href="/tracks"><img src="https://www.pngkit.com/png/full/31-316559_white-home-icon-no-background.png" class="home-logo"></a></li>
          <li><a href="/logout"><img src="https://i.imgur.com/pN55Y25.png" class="logout-logo"></a></li>
          <li><a href="https://soundcloud.com/you/likes" target="_blank"><img src="https://a-v2.sndcdn.com/assets/images/peace-cloud-28ad0963.svg" class="soundcloud-logo"></a></li>
        </ul>
    </nav>

    <!-- SOUNDCLOUD WIDGET BELOW -->
    <iframe id="sc-widget" width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https://soundcloud.com/svddendeath/svdden-death-demonic-curse"></iframe>
    <script src="https://w.soundcloud.com/player/api.js" type="text/javascript"></script>
    <script type="text/javascript">
      (function(){
        var widgetIframe = document.getElementById('sc-widget'),
            widget       = SC.Widget(widgetIframe),
            newSoundUrl = 'https://api.soundcloud.com/tracks/13692671';
    
        widget.bind(SC.Widget.Events.READY, function() {
          // load new widget
          widget.bind(SC.Widget.Events.FINISH, function() {
            widget.load(newSoundUrl, {
              show_artwork: false
            });
          });
        });
      }());
    </script>



    <tr>
        <div class="container"></div>
            <div class="link">
                <form action="/tracks" method="POST">
                    <label>LINK:
                        <input type="Url" name="addTrack" id="link">
                    </label>
            </div>
            <div class="status">
                    <label>STATUS:
                        <input type="text" name="status" id="status">
                    </label>
                    <input type="submit" value="Upload">
                </form>
            </div>
            <section>
            <% tracks.forEach(function(track) { %>
                <td><%= track.addTrack %></td>
                <td><%= track.status %></td>
                <td><%= track.addComment %></td>
                <a href="/tracks/<%= track._id %>/comments" class="addComment" name="addComment">Comments</a>
                <% }) %>
            </section>
            </div>
    </tr>
    <footer>
    </footer>
</body>
</html>
